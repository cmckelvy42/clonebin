 *
 * You're free to add application-wide styles to this file and they'll appear at the bottom of the
 * compiled file so the styles you add here take precedence over styles defined in any other CSS/SCSS
 * files in this directory. Styles in this file should be added after the last require_* statement.
 * It is generally better to create a new file per style scope.
 *
 *= require_tree .
 *= require_self
 */

 a, b, body, caption, div, em, footer, form, h1, h2, h3, h4, h5, h6, header, html, i, img, label, li, p, section, span, strong, sub, table, tbody, td, tfoot, th, thead, time, tr, tt, u, ul {
   margin: 0;
   padding: 0;
   font-size: 100%;
   vertical-align: baseline;
   white-space: nowrap;
}

 img {
   vertical-align: middle;
   max-width: 100%;
   height: auto;
}

 body {
   font-family: segoe ui,trebuchet MS,Lucida Sans Unicode,Lucida Sans,Sans-Serif;
   line-height: 24px;
   background: #f7f7f7;
 }
 a {
   text-decoration: none;
   color: #c03;
   cursor:pointer;
}
th {
   text-transform: uppercase;
}
td, th {
   padding: 0;
   text-align: left;
}
i {
   width: 16px;
   height: 16px;
   margin-right: 5px;
   font-size: 16px;
   color: #999;
}
a:hover {
   color:#666;
}

 li, ul {
   margin: 0;
   padding: 0;
   list-style-type: none;
 }
 .nav-bar {
    width: 100%;
    height: 50px;
    box-shadow: 0 1px 1px 0 black;
    color: #fff;
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    font-size: .8em;
    z-index: 1030;
    background-color:#02456c;
 }

 .header-container {
   height: 100%;
   display: flex;
   align-items: center;
   justify-content: space-between;
   max-width: 1340px;
   width: 100%;
   flex: 0 0 auto;
   position: relative;
   margin: 0 auto;
   max-width: 1340px;
   white-space: nowrap;
 }
 .header-logo {
    display: block;
    color: #fff;
    background-size: 45px;
    cursor: pointer;
    font-size: 1.75em;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin: 0 25px 0 -5px;
    padding-left: 48px;
 }

 .header-left {
     height: 100px;
     display: flex;
     justify-content: flex-start;
     align-items: center;
 }

 .header-right {
    height: 100px;
    display: flex;
    justify-content: flex-end;
    align-items: center;
 }

 #paste-btn {
   background: #61ba65 url(<%=asset_path 'add_2.png' %>) no-repeat 8px 9px;
    background-size: 13px 13px;
    border-radius: 3px;
    color: #fff;
    cursor: pointer;
    font-size: 1em;
    font-weight: 400;
    height: 30px;
    line-height: 28px;
    text-transform: lowercase;
    vertical-align: baseline;
    margin: 2px 8px 0 3px;
    padding: 0 10px 0 26px;
 }

 h3 {
    display: inline-block;
    color: #fff;
    background-size: 45px;
    font-size: 1.25em;
    font-weight: 500;
    margin: 0 10px 0 10px;
    vertical-align: middle;
 }

 .header-right .nav-btn{
    display: inline-block;
    border: 1px solid #fff;
    border-radius: 3px;
    cursor: pointer;
    font-size: 1em;
    font-weight: 400;
    height: 25px;
    line-height: 23px;
    margin: 0 0 0 5px;
    padding: 3px 0;
    width: 71px;
    text-align: center;
    text-transform: uppercase;
    background:white;
    color: #023859;
 }

 #login-btn {
     color:white;
     background: rgba(0,0,0,0);
     margin-right: 15px;
 }

 #logout-btn{
    margin-right: 15px;
 }

 .main-container{
   padding: 58px 0 10px;
   background: #fff;
   min-height: calc(100vh - 350px);
   border-bottom: 1px solid #ddd;
   border-left: 1px solid #ddd;
   border-radius: 0 0 3px 3px;
   border-right: 1px solid #ddd;
   display: grid;
   grid-template-rows: 1fr;
   grid-template-columns: 1fr 320px;
   width: 100%;
   flex: 0 0 auto;
   position: relative;
   margin: 0 auto;
   max-width: 1340px;
 }

 .content-title{
    position: relative;
    color: #333;
    font-size: 1em;
    font-weight: 600;
    padding: 0 0 5px;
    border-bottom: 2px solid #ddd;
 }

 .content-title.-no-border {
   border-bottom: none;
   padding: 0 0 5px;
}

.content {
   margin: 0 10px;
   overflow: hidden;
}

 .header-profile-picture img{
   border: 1px solid #369;
   border-radius: 3px;
   margin-bottom: 0.2em;
   height: 32px;
   width: 32px;
   max-width: 100%;
   display: inline-block;
   cursor: pointer;
   vertical-align: middle;
}

textarea {
   background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 3px;
    box-shadow: inset 0 1px 1px rgb(0 0 0 / 8%);
    box-sizing: border-box;
    display: block;
    font-family: Consolas,Menlo,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,monospace,serif;
    font-size: 13px;
    min-height: 200px;
    line-height: 21px;
    width: 100%;
    margin: 0 0 10px;
    padding: 8px 12px;
    overflow: hidden;
    overflow-wrap: break-word;
    height: 300px;
    tab-size: 4;
    resize: none;
    outline: none;
}

.form-frame {
   width: 460px;
   min-width: 460px;
   padding: 8px;
   padding-top: 10px;
   font-size: .8em;
   font-weight: 400;
   border-radius: 3px;
}

.form-frame div {
   margin: 0 0 11.5px;
}
.form-frame label {
   font-weight: 400;
   width: 150px;
   text-align: left;
   padding: 0;
   line-height: 32px; 
   max-width: 100%;
   float: left;
}
.form-frame select{
   height: 32px;
   line-height: 32px;
   color: #444;
   padding-left: 8px;
   padding-right: 20px;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
   cursor:pointer;
   width: 50%;
   outline:none;
}

.form-frame option:disabled{
   color: #999;
}

button{
   font-weight: 600;
   height: 35px;
   line-height: 34px;
   padding: 0 25px;
   background-color: #ddd;
   border-bottom: 2px solid #ccc;
   color: #000;
   cursor: pointer;
   display: inline-block;
   font-size: 13px;
   min-width: 73px;
   font-family: segoe ui,trebuchet MS,Lucida Sans Unicode,Lucida Sans,Sans-Serif;
   text-align: center;
   text-decoration: none;
   border: 0;
   border-radius: 3px;
   margin-bottom: 0;
   white-space: nowrap;
   vertical-align: middle;
   touch-action: manipulation;
   background-image: none;
   user-select: none;
   outline: none;
   margin: 0;
   box-shadow: 0 2px 2px 0 #999;
}

button:hover{
   color:#333
}

button:active{
   color:#333;
   background-color: #aaa;
}

.form-frame input{
   height: 27px;
   line-height: 32px;
   color: #444;
   padding-left: 8px;
   padding-right: 20px;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
   width:43%;
   outline:none;
}

.sidebar-container{
   padding: 1px 10px 0;
   border-left: 1px dotted #ddd;
}

.sidebar-title {
   color: #333;
   font-size: .85em;
   font-weight: 600;
}

.sidebar-container li {
   font-size: .75em;
   line-height: 16px;
   text-align: match-parent;
   background-size: 14px;
   border-top: 1px dotted #ddd;
   color: #999;
   list-style: none;
   overflow: hidden;
   margin: 0;
   padding: 5px 0 5px 20px;
}

.error-message {
   margin: 0 0 10px;
   background-size: 20px 20px;
   border: 1px solid #f44336;
   border-left-width: 8px;
   border-radius: 3px;
   padding: 11px 10px 11px 10px;
   line-height: 18px;
   min-height: 20px;
   font-size: .8em;
   color: #181818;
}

.post-view, .user-view {
   padding-top: 1px;
   padding-right: 2px;
}

.info-bar {
   color: #666;
   font-size: .8em;
}

.paste-info, .user-info {
   height: 50px;
   margin: 0 0 7px;
   position: relative;
   display: flex;
   justify-content: flex-start;
   align-items: center;
}

.user-icon {
   border: 1px solid #ddd;
   border-radius: 3px;
   margin: -2px 10px 0 0;
   padding: 2px;
   width: 40px;
   min-width: 40px;
}

.user-icon img {
   height: 40px;
   width: 40px;
}

.info-top h1 {
   color: #333;
   display: inline;
   font-size: 1.25em;
   font-weight: 600;
   height: 20px;
   line-height: 19px;
   margin: 0;
   padding: 0;
}

.info-bottom {
   margin: 5px 0 0;
   height: 23px;
   line-height: 23px;
   overflow: hidden;
   font-size: .85em;
   text-transform: uppercase;
   display: flex;
   justify-content: flex-start;
}

.info-bottom .username {
   background-size: 16px 16px;
}

.info-bottom .date {
   background-size: 16px 16px;
   margin-left: 8px;
}

.info-bottom .expire {
   background-size: 16px 16px;
   margin-left: 8px;
}

.paste-tools {
   color: #666;
   font-size: .8em;
   border-left: 1px solid #ddd;
   border-top: 1px solid #ddd;
   border-right: 1px solid #ddd;
   display: inline-block;
}

.paste-tools a {
   padding: 0 5px;
   display: inline-block;
}

.paste-tools a:hover {
   background: #ddd;
}
.paste-tools #edit {
   border-right: 1px solid #ddd;
}

.user-pastes {
   border-collapse: collapse;
   font-size: .8em;
   width: 100%;
   text-align: left;
   border-spacing: 0;
}
.user-pastes td a {
   color: #04a;
   text-decoration: none;
}

.user-pastes td {
   border-bottom: 1px solid #f2f2f2;
   vertical-align: top;
   padding: 0 6px;
   line-height: 35px;
}

.user-pastes th{
   border-bottom: 2px solid #ddd;
   font-weight: 600;
   text-transform: uppercase;
   padding: 4px 6px;
}

.td-right {
   text-align: right;
}
.form-left, .form-right {
   float: left;
   line-height: 35px;
   margin: 0 0 10px;
}
.form-left {
   width: 150px;
}

.form-right {
   min-width: 300px;
   text-align: left;
}

.profile-btn {
   margin-left: 150px;
}

.delete-account-btn {
   padding-left: 150px;
}

.delete-account-btn button{
   background-color: #d00;
   border-bottom: 2px solid #c00;
}

.delete-account-btn button:hover{
   color:#fff
}

.delete-account-btn button:active{
   color:#300;
   background-color: #a00;
}

.session-form {
   float: left;
   min-width: 558px;
   max-width: 558px;
   margin: 10px 10px 10px 0;
}

.session-form-group {
   margin: 10px 0 10px;
}

.session-form label {
   font-weight: 400;
   width: 20%;
   text-align: left;
   padding: 0;
   line-height: 35px; 
   max-width: 100%;
   float: left;
   font-size: .8em;
}

.session-form input {
   box-shadow: inset 0 1px 1px rgb(0 0 0 / 8%);
   height: 33px;
   font-size: .8em;
   font-weight: 400;
   border: 1px solid #ddd;
   border-radius: 3px;
   display: block;
   width: 70%;
   line-height: 1.45;
   display: inline-block;
   padding: 0 5px;
}

.session-form button {
   margin-left: 20%;
   margin-top: 10px;
}

.sidebar-container i{
  float: left;
}

.header-hover-menu {
   height: 50px;
   width: 40px;
   display: inline-block;
   vertical-align: middle;
}

.header-hover-menu i{
   padding-top: 18px;
   padding-left: 10px;
}

.hover-menu-list i {
   padding: 0;
   color: white;
}
.hover-menu-list {
   background: #02456c;
   border-radius: 0 0 3px 3px;
   box-shadow: 0 1px 1px rgb(0 0 0 / 52%);
   color: #fff;
   font-size: 12px;
   font-weight: 600;
   line-height: 24px;
   list-style: none;
   max-width: 360px;
   min-width: 180px;
   margin: 0;
   padding: 0;
   border-top: 0;
   top: 50px;
   position: absolute;
   margin-left: -150px;
}

.hover-menu-list a {
   align-content: center;
   color: inherit;
   display: block;
   line-height: 30px;
   text-decoration: none;
   margin: -2px 0 0;
   padding: 3px 14px 3px 0;
   list-style: none;
   text-align: center;
   text-transform: uppercase;
   cursor: pointer;
}

.hover-menu-list a:hover {
   background-color: #023859;
}
.user-search {
   flex-grow: 1;
   text-align: right;
   padding-top: 1px;
}
.user-search input{
   border-radius: 3px;
   vertical-align: top;
   font-size: 14px;
   height: 30px;
   line-height: 30px;
   padding: 0 7px 0 34px;
   background: #f7f7f7 url(<%=asset_path 'search.png'%>) no-repeat 7px 7px;
   background-size: 16px;
   margin: 0;
   color: #000;
   border: 1px solid #ddd;
   width: 200px;
   outline:none;
}

.notice-container div{
   width: 100%;
   }
.notice-message {
   background: #fff;
    background-size: 20px 20px;
    border-radius: 3px;
    border: 1px solid #ddd;
    border-left-width: 8px;
    line-height: 20px;
    min-height: 20px;
    margin: 6px 0;
    padding: 10px 10px 10px 10px;
}

footer {
    width: 100%;
    height: 50px;
    box-shadow: 0 1px 1px 0 black;
    color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 1030;
    background-color:#02456c;
 }

 footer i{
   font-size: 36px;
   vertical-align: middle;
   margin-right: 20px;
   padding-left: 10px;
   color: #fff;
   cursor: pointer;
 }

 footer i:hover{
   color: #ddd;
 }

 @media screen and (max-width: 730px) {
    .sidebar-container {
        display: none !important;
    }
    .main-container {
    display: inherit;
}